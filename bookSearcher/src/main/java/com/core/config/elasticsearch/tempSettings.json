{
  "settings": {
    "analysis": {
      "tokenizer": {
        "nori_none": {
          "type": "nori_tokenizer",
          "decompound_mode": "none"
        }
      },
      "analyzer": {
        "custom_nori": {
          "type": "custom",
          "tokenizer": "nori_none",
          "filter": [
            "unique",
            "nori_readingform",
            "nori_part_of_speech"
          ]
        }
      },
      "filter": {
        "korean_pos": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "NNB",
            "NR",
            "VA",
            "VX",
            "VCP",
            "VCN",
            "MM",
            "MAG",
            "MAJ",
            "IC",
            "J",
            "E",
            "XPN",
            "XSN",
            "XSV",
            "XSA",
            "SY",
            "NR",
            "SL",
            "SN"
          ]
        }
      }
    },
    "index": {
      "refresh_interval": "1d"
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "isbn": {
        "type": "long"
      },
      "title": {
        "type": "text",
        "analyzer": "custom_nori"
      },
      "author": {
        "type": "text",
        "analyzer": "custom_nori"
      },
      "publisher": {
        "type": "text",
        "analyzer": "custom_nori"
      },
      "img": {
        "type": "text"
      },
      "description": {
        "type": "text",
        "analyzer": "custom_nori"
      },
      "kdc": {
        "type": "long"
      },
      "titleSub": {
        "type": "text",
        "analyzer": "custom_nori"
      },
      "authorSub": {
        "type": "text",
        "analyzer": "custom_nori"
      }
    }
  }
}